<h1>Show page</h1>

<a href="/bankaccounts/new">Want to add a new bank account?</a>

<h2><%= @user.name %></h2>

<% @user.bankaccounts.each do |bankaccount| %>
  <a href="/bankaccounts/<%= bankaccount.id %>"><h3><%= bankaccount.bank %></h3></a>
<% end %>

<form  action="/users/<%= @user.id %>" method="post">
  <input type="hidden" name="_method" value="DELETE">
  <input type="submit" name="" value="Delete">

</form>
